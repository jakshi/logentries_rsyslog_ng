$InputFileName <%= @log_filename %>
<% if @rsyslog_tag %>
$InputFileTag <%= "#{@rsyslog_tag}:" %>
<% end %>
$InputFileStateFile <%= @state_file %>
<% if @syslog_facility %>
$InputFileFacility <%= @syslog_facility %>
<% end %>
